[core]
	autocrlf = input
	editor = vim
	pager = diff-so-fancy | less --tabs=4 -RFX
	hooksPath = ~/.config/git/hooks
[alias]
	a = add
	amend = commit -a --amend --no-edit
	b = brunch
	br = branch
	ci = commit
	co = checkout
	d = diff
	fe = fetch
	l = log --graph --date=short
	pl = pull
	ps = push
	re = reset
	s = status
	st = status
	track = !git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`
[push]
	default = current
[http]
	postBuffer = 1048576000
[ssh]
	postBuffer = 524288000
[rerere]
	enabled = 1
[diff]
	tool = vimdiff
	algorithm = patience
[difftool]
	prompt = false
[difftool "idea"]
	cmd = idea diff \"$LOCAL\" \"$REMOTE\"
[help]
	autocorrect = 20
[branch]
	autosetupmerge = true
[rebase]
	missingCommitsCheck = error
	autoStash = true
[mergetool]
	prompt = false
	keepbackup = false
[merge]
	summary = true
	verbosity = 1
	tool = vimdiff
[mergetool "idea"]
	cmd = idea merge \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\"
	trustExitCode = false
[color]
	ui = true
[color "branch"]
        current = yellow reverse
	local = yellow
	remote = green
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 227
	frag = magenta bold
	commit = 227 bold
	old = red bold
	new = green bold
	whitespace = red reverse
[include]
	path = .gitconfig.user
[pull]
	rebase = true
