{
  "diagnostic.messageTarget": "float",
  "diagnostic.enableMessage": "always",
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.messageDelay": 800,
  "diagnostic.refreshOnInsertMode": false,
  "diagnostic.refreshAfterSave": false,
  "diagnostic.maxWindowHeight": 30,
  "coc.preferences.formatOnSaveFiletypes": ["elm"],
  "coc.preferences.snippets.enable": true,
  "eslint.filetypes": ["javascript", "javascriptreact"],
  "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
  "suggest.disableMenu": true,
  "suggest.maxCompleteItemCount": 10,
  "suggest.minTriggerInputLength": 2,
  "suggest.snippetIndicator": " ►",
  "tsserver.formatOnType": false,
  "vetur.format.scriptInitialIndent": true,
  "vetur.format.styleInitialIndent": true,
  "languageserver": {
    "elmLS": {
      "enable": true,
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"],
      "trace.server": "verbose",
      "initializationOptions": {
        "elmFormatPath": "elm-format",
        "elmAnalyseTrigger": "save"
      }
    },
    "haskell": {
      "enable": false,
      "command": "ghcide",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml"
      ],
      "filetypes": ["hs", "lhs", "haskell"],
      "trace.server": "verbose",
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true,
          "maxNumberOfProblems": 10,
          "completionSnippetsOn": true,
          "formattingProvider": "brittany"
        }
      }
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck",
    "haskell": "hlint"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt",
    "nix": "nixpkgs-fmt",
    "haskell": "brittany"
  },
  "diagnostic-languageserver.formatters": {
    "shfmt": { "command": "shfmt" },
    "nixpkgs-fmt": { "command": "nixpkgs-fmt" },
    "brittany": { "command": "brittany", "args": ["--write-mode=inplace"] }
  },
  "diagnostic-languageserver.linters": {
    "hlint": {
      "command": "hlint",
      "debounce": 500,
      "args": ["--json", "-"],
      "sourceName": "hlint",
      "parseJson": {
        "line": "startLine",
        "column": "startColumn",
        "endLine": "endLine",
        "endColumn": "endColumn",
        "message": "${hint}\n${to}",
        "security": "severity"
      },
      "securities": {
        "Error": "error",
        "Warning": "warning",
        "Suggestion": "info"
      }
    }
  },
  "markdownlint.onOpen": false,
  "markdownlint.config": {
    "default": true,
    "line_length": false
  },
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  }
}
