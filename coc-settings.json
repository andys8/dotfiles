{
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.preferences.floatActions": false,
  "coc.preferences.formatOnSaveFiletypes": ["elm"],
  "coc.preferences.rootPatterns": ["package.json", ".git"],
  "diagnostic.enableMessage": "always",
  "diagnostic.errorSign": "ï›·",
  "diagnostic.floatConfig": { "maxHeight": 30 },
  "diagnostic.messageDelay": 800,
  "diagnostic.messageTarget": "float",
  "diagnostic.refreshOnInsertMode": false,
  "diagnostic.warningSign": "î€Š",
  "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
  "suggest.disableMenu": true,
  "suggest.maxCompleteItemCount": 10,
  "suggest.minTriggerInputLength": 2,
  "suggest.snippetIndicator": " ðŸ”¥",
  "suggest.snippetsSupport": true,
  "tsserver.formatOnType": false,
  "vetur.format.scriptInitialIndent": true,
  "vetur.format.styleInitialIndent": true,
  "tailwindCSS.enable": true,
  "tailwindCSS.experimental.classRegex": [
    "\\bclassName\\s*:\\s*\\\"([_a-zA-Z0-9\\s\\-\\:\\/]+)\\\""
  ],
  "tailwindCSS.headwind.classRegex": {
    "purescript": "\\bclassName\\s*:\\s*\\\"([_a-zA-Z0-9\\s\\-\\:\\/]+)\\\""
  },
  "tailwindCSS.includeLanguages": {
    "purescript": "javascriptreact"
  },
  "languageserver": {
    "elmLS": {
      "enable": true,
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"],
      "trace.server": "off",
      "initializationOptions": {
        "elmFormatPath": "elm-format",
        "elmAnalyseTrigger": "save"
      }
    },
    "haskell-language-server": {
      "enable": true,
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp", "--logfile", "/tmp/hls.log"],
      "filetypes": ["haskell", "lhaskell"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "disabledFeatures": ["progress", "codeLens"],
      "initializationOptions": {
        "haskell": {
          "checkParents": "CheckOnSave",
          "checkProject": false,
          "diagnosticsOnChange": true,
          "formatOnImportOn": true,
          "formattingProvider": "fourmolu",
          "hlintOn": true,
          "liquidOn": false,
          "maxCompletions": 10,
          "plugin": {
            "hlint": { "globalOn": true },
            "splice": { "globalOn": false },
            "eval": { "globalOn": false },
            "haddockComments": { "globalOn": false },
            "ghcide-type-lenses": { "globalOn": false },
            "importLens": {
              "codeLensOn": false,
              "codeActionsOn": true
            },
            "refineImports": {
              "codeLensOn": false,
              "codeActionsOn": true
            },
            "tactics": {
              "globalOn": false,
              "hoverOn": false,
              "codeLensOn": false,
              "codeActionsOn": false
            }
          }
        }
      }
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "purescript": {
      "command": "purescript-language-server",
      "args": ["--stdio"],
      "filetypes": ["purescript"],
      "trace.server": "off",
      "rootPatterns": ["spago.dhall", "bower.json", "psc-package.json"],
      "settings": {
        "purescript": {
          "pursExe": "purs",
          "autocompleteLimit": 8,
          "addSpagoSources": true,
          "formatter": "purs-tidy"
        }
      }
    }
  },
  "diagnostic-languageserver.filetypes": {
    "ebotlang": "ce-dev",
    "markdown": "write-good",
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "dhall": "dhall",
    "nix": "nixpkgs-fmt",
    "sh": "shfmt"
  },
  "diagnostic-languageserver.formatters": {
    "dhall": { "command": "dhall", "args": ["format"] },
    "shfmt": { "command": "shfmt", "args": ["-i", "4"] },
    "nixpkgs-fmt": { "command": "nixpkgs-fmt" }
  },
  "diagnostic-languageserver.linters": {
    "write-good": {
      "command": "write-good",
      "debounce": 500,
      "args": ["--no-passive", "--text=%text"],
      "offsetLine": 0,
      "offsetColumn": 1,
      "sourceName": "write-good",
      "formatLines": 1,
      "formatPattern": [
        "(.*)\\s+on\\s+line\\s+(\\d+)\\s+at\\s+column\\s+(\\d+)\\s*$",
        { "line": 2, "column": 3, "message": 1 }
      ],
      "securities": {
        "undefined": "info"
      }
    },
    "ce-dev": {
      "command": "ce-dev",
      "sourceName": "ce-dev",
      "debounce": 300,
      "args": ["verify", "--json", "%file"],
      "parseJson": {
        "line": "startLine",
        "column": "startColumn",
        "endLine": "endLine",
        "endColumn": "endColumn",
        "message": "[${source}] ${message}"
      }
    }
  },
  "cSpell.enabled": true,
  "cSpell.diagnosticLevel": "Information",
  "cSpell.enabledLanguageIds": ["gitcommit", "markdown", "plaintext", "text"],
  "cSpellExt.enableDictionaries": ["german"],
  "cSpell.language": "en,de",
  "cSpell.numSuggestions": 5,
  "cSpell.ignoreRegExpList": ["`.*`", "/^```(?:.|\\s)+?^```/mig"],
  "yaml.customTags": [
    "!Equals sequence",
    "!FindInMap sequence",
    "!GetAZs",
    "!GetAtt",
    "!If sequence",
    "!ImportValue",
    "!Join sequence",
    "!Ref",
    "!Select sequence",
    "!Split sequence",
    "!Sub"
  ],
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "constructor": "\uf0ad",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  }
}
