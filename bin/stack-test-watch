#!/bin/bash
# Select a stack (haskell) test to run
# Usage: stack-test-watch [query]
# Dependencies: ack, cut, fzf, stack

testregex="\s*describe \"(?P<foo>[a-zA-Z0-9 \.]+)\""
testname=$(
    ack "$testregex" --haskell --output '$+' -m 1 |
        cut -d':' -f1,3 |
        fzf -0 -1 -q "$1" |
        cut -d':' -f2
)
[ -z "$testname" ] && exit 1
stack test --file-watch --test-arguments="--match \"/$testname/"\"
