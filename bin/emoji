#!/bin/bash
# Emoji rofi selection

EMOJILIST="https://raw.githubusercontent.com/andys8/rofi-emoji-lists/master/full-list.txt"
FILE="$HOME/.cache/emojis.txt"
FONT="Noto Color Emoji 17"

[ -f "$FILE" ] || curl --silent "$EMOJILIST" --output "$FILE"
selection=$(rofi -dmenu -markup-rows -i -columns 10 -lines 10 -p 'Emoji' -font "$FONT" <"$FILE" | awk '{ print $NF }' | tr -d '\n')

# in clipboard
xclip -sel clip "$selection"
echo -n "$selection" | xsel -bi

# Try to paste
sleep 0.1
xdotool type --clearmodifiers "$selection"
