#!/bin/sh
# set -eu
# Usage: todo [today|ls|list|yesterday|tomorrow]

path="$HOME/Documents/todo"
arg="${1:-today}"

case $arg in
t) arg="tomorrow" ;;
y) arg="yesterday" ;;
esac

if [ "$arg" = "ls" ] || [ "$arg" = "list" ]; then
    ranger "$path"
    exit 0
fi

date=$(date --date="$arg" +"%Y-%m-%d")
[ -z "$date" ] && exit 1

file="$path/$date.md"
[ -f "$file" ] || {
    mkdir -p "$path"
    echo "# TODO $date" >"$file"
    echo '' >>"$file"
    echo '- [ ]' >>"$file"
}

vim "$file"
