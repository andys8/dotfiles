#!/bin/sh

export XSECURELOCK_AUTH_BACKGROUND_COLOR=rgb:00/00/00
export XSECURELOCK_AUTH_FOREGROUND_COLOR=rgb:f8/f8/f2 
export XSECURELOCK_DISCARD_FIRST_KEYPRESS=1
export XSECURELOCK_PASSWORD_PROMPT=asterisks
export XSECURELOCK_SHOW_DATETIME=0
export XSECURELOCK_SHOW_HOSTNAME=0
export XSECURELOCK_SHOW_USERNAME=0
export XSECURELOCK_BLANK_TIMEOUT=15
export XSECURELOCK_AUTH_TIMEOUT=15
export XSECURELOCK_BLANK_DPMS_STATE=standby

xsecurelock
