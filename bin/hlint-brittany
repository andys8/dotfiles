#!/bin/bash
# run hlint refactor and then brittany
# hlint can return empty string if nothing to do
set -euo pipefail

if [ ! "$*" = "" ]; then
	INPUT=$(cat "$@") # file
else
	INPUT=$(cat -) # stdin
fi

HLINT=$(echo "$INPUT" | hlint --refactor -)
[ "$HLINT" = "" ] && HLINT=$INPUT
echo "$HLINT" | brittany --write-mode=inplace
