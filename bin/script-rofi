#!/bin/bash
# Select dotfiles script to execute

cd ~/dotfiles/scripts || exit 1

# select script with rofi
script=$(find . -type f -printf "%P\n" | rofi -dmenu -i -p 'Script' -matching fuzzy)
[ "$script" == "" ] && exit 0

# execute script
$TERMINAL -e sh -c "$script" && notify-send "$script executed"
