# open terminal
lalt - return : open -n -a "Alacritty"

# open chrome 
ctrl + lalt - return : open -n -a "Thorium"

# raycast
lalt - d : open -g raycast://

# moves focus between windows in the current focused display
lalt - h : yabai -m window --focus west
lalt - j : yabai -m window --focus south
lalt - k : yabai -m window --focus north
lalt - l : yabai -m window --focus east

# moves focus between spaces 
lalt - 1 : yabai -m space --focus 1
lalt - 2 : yabai -m space --focus 2
lalt - 3 : yabai -m space --focus 3
lalt - 4 : yabai -m space --focus 4

# delete focused space
lalt - q : yabai -m space --destroy

# toggle window split type
lalt - e : yabai -m window --toggle split

# close window
lalt - x : yabai -m window --close
lalt - escape : yabai -m window --close

# minimize window
lalt - m : yabai -m window --minimize

# rotate tree
lalt - r : yabai -m space --rotate 90

# mirror tree y-axis
lalt - y : yabai -m space --mirror y-axis

# toggle desktop offset
lalt - a : yabai -m space --toggle padding; yabai -m space --toggle gap

# toggle window parent zoom
# alt - d : yabai -m window --focus mouse && \
#           yabai -m window --toggle zoom-parent

# float / unfloat window and center on screen
lalt - t : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# toggle window fullscreen zoom
lalt - f : yabai -m window --focus mouse && \
          yabai -m window --toggle zoom-fullscreen

# toggle window native fullscreen
shift + lalt - f : yabai -m window --toggle native-fullscreen

# increase gap in focused space
lalt - g : yabai -m space --gap rel:10

# decrease gap in focused space
shift + lalt - g : yabai -m space --gap rel:-10

# create a new space and follow focus
lalt - n : yabai -m space --create && \
                  index="$(yabai -m query --displays --display | jq '.spaces[-1]')" && \
                  yabai -m space --focus "${index}"

# create a new space, move window and follow focus
shift + lalt - n : yabai -m space --create && \
                  index="$(yabai -m query --displays --display | jq '.spaces[-1]')" && \
                  yabai -m window --space "${index}" && \
                  yabai -m space --focus "${index}"

# balance size of windows
shift + lalt - 0 : yabai -m space --balance

# swap window
shift + lalt - h : yabai -m window --swap west
shift + lalt - j : yabai -m window --swap south
shift + lalt - k : yabai -m window --swap north
shift + lalt - l : yabai -m window --swap east

# move window
shift + cmd - h : yabai -m window --warp west
shift + cmd - j : yabai -m window --warp south
shift + cmd - k : yabai -m window --warp north
shift + cmd - l : yabai -m window --warp east

# send window to a space 
shift + lalt - 1 : yabai -m window --space 1
shift + lalt - 2 : yabai -m window --space 2
shift + lalt - 3 : yabai -m window --space 3
shift + lalt - 4 : yabai -m window --space 4

# change layout of desktop
ctrl + lalt - a : yabai -m space --layout bsp
ctrl + lalt - d : yabai -m space --layout float

# increase window size
# ctrl + lalt - h : yabai -m window --resize left:-40:0
# ctrl + lalt - j : yabai -m window --resize bottom:0:40
# ctrl + lalt - k : yabai -m window --resize top:0:-40
# ctrl + lalt - l : yabai -m window --resize right:40:0

# decrease window size
# ctrl + lalt + cmd - h : yabai -m window --resize left:40:0
# ctrl + lalt + cmd - j : yabai -m window --resize bottom:0:-40
# ctrl + lalt + cmd - k : yabai -m window --resize top:0:40
# ctrl + lalt + cmd - l : yabai -m window --resize right:-40:0

# increase and decrease window size
ctrl + lalt - h : yabai -m window --resize left:-40:0; yabai -m window --resize right:-40:0
ctrl + lalt - j : yabai -m window --resize bottom:0:40; yabai -m window --resize top:0:40
ctrl + lalt - k : yabai -m window --resize top:0:-40; yabai -m window --resize bottom:0:-40
ctrl + lalt - l : yabai -m window --resize right:40:0; yabai -m window --resize left:40:0

# restart yabai
lalt + cmd - r : yabai --restart-service

# screenshots
lalt - p : /usr/sbin/screencapture -ic

# consistency
rcmd - q : skhd -t "@"
# ctrl - f : skhd -k "cmd - f"
# ctrl - v : skhd -k "cmd - v"
# ctrl - x : skhd -k "cmd - x"
# ctrl - c : skhd -k "cmd - c"
# cmd - 0x0A : skhd -t "|"

# arrow Keys
ctrl - h : skhd -k "left"
ctrl - j : skhd -k "down"
ctrl - k : skhd -k "up"
ctrl - l : skhd -k "right"

ctrl - z : skhd -k "home"
ctrl - u : skhd -k "pagedown"
ctrl - i : skhd -k "pageup"
ctrl - o : skhd -k "end"

